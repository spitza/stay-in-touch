<% provide(:title, "Home") %>
<div class="center jumbotron">
  <h1>stay in touch</h1>

  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
    <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="meeting_form">
        <%= render 'shared/meeting_form' %>
      </section>
      <div class="col-md-8">
        <% if current_user.meetings.any? %>
          <h3>Meetings </h3>
          <ol class="meetings">
            <%= render @meetings %>
          </ol>
          <%= will_paginate @meetings %>
        <% end %>
      </div>
    </aside>
  </div>
  <% else %>
    <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", class: "btn btn-lg btn-primary" %>
  <% end %>
</div>